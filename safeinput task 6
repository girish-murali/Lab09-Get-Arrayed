import java.util.Scanner;

public class SafeInput {

    public static int getRangedInt(Scanner pipe, String prompt, int low, int high) {
        int retVal = low - 1;
        String trash;
        boolean done = false;

        do {
            System.out.print(prompt + " [" + low + " - " + high + "]: ");
            if (pipe.hasNextInt()) {
                retVal = pipe.nextInt();
                pipe.nextLine();
                if (retVal >= low && retVal <= high) {
                    done = true;
                } else {
                    System.out.println("\n*** ERROR: You must enter a value within the range " + low + " - " + high + " ***");
                }
            } else {
                trash = pipe.nextLine();
                System.out.println("\n*** ERROR: You must enter an integer, not: " + trash + " ***");
            }
        } while (!done);

        return retVal;
    }
}
